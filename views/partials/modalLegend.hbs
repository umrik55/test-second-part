<script>
    // Get the modal
    var modalGreen = document.getElementById("myModalGreenLegend");
    var modalYellow = document.getElementById("myModalYellowLegend");
    var modalOrange = document.getElementById("myModalOrangeLegend");
    var modalGrey = document.getElementById("myModalGreyLegend");



    $( "#greenLegend" ).hover(function() {
                modalGreen.style.display = "block"
            }
    );

    $( "#yellowLegend" ).hover(function() {
                modalYellow.style.display = "block"
            }
    );

    $( "#orangeLegend" ).hover(function() {
                modalOrange.style.display = "block"
            }
    );

    $( "#greyLegend" ).hover(function() {
                modalGrey.style.display = "block"
            }
    );

    $( ".closeLegend" ).hover(function() {
            modalGreen.style.display = "none";
            modalYellow.style.display = "none";
            modalOrange.style.display = "none";
            modalGrey.style.display = "none";
        }
    );


    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modalGreen || event.target == modalYellow || event.target == modalOrange || event.target == modalGrey) {
            modalGreen.style.display = "none";
            modalYellow.style.display = "none";
            modalOrange.style.display = "none";
            modalGrey.style.display = "none";
        }
    }
</script>

