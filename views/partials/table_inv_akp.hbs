        <form  id="block" action="/upload" enctype="multipart/form-data" method="post">
            <input type="file" id="f_file" name="Order_" class="btn btn-sm btn-primary"><br>
            <input type="submit"  id="f_submit" value="Завантажити" class="btn btn-sm btn-primary">
        </form>
    </div>
</center>


<script>
var filesExt = ['xls', 'xlsx', 'XLS', 'XLSX']; // массив расширений
$('input[type=file]').change(function(){
    var parts = $(this).val().split('.');
    if(filesExt.join().search(parts[parts.length - 1]) != -1){
        $("#f_submit").removeAttr("disabled");
    } else {
        document.getElementById("f_file").value = "";//Чистим поле выбора файла
        $("#f_submit").attr("disabled", "disabled");
        alert("Оберіть файл з розширенням *XLS або XLSX");
    }
});
</script>
